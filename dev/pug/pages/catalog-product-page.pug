.s-catalog-product
    .container
        .catalog-product
            .page__top
                h1.page__title Каталог товаров
                .page__btn
                    .a-btn.btn__offer-video.catalog-product--btn
                        .page-btn__text Добавить свой товар


        .catalog-product__body
            .catalog-product__filter
                aside.filter
                    include ../modules/filter/filter
                .catalog-product__banner
                    .promo
                        .promo__img(style="background-image: url('static/images/img/banner-240x400.jpg')")
            .catalog-product__content
                .filter-top__inner
                    .filter-top__dropdown
                        +icon('filter','filter-top__icon')
                        .filter-top__open Открыть фильтры
                        .filter-top__mobile
                            aside.filter
                                include ../pages/filter-workroom/filter
                    .filter-top
                        ul.filter-top__list
                            li.filter-top__title Сортировка
                            li.filter-top__item.filter-top--active по цене
                            li.filter-top__item по рейтингу
                            li.filter-top__item по дате добавления
                            li.filter-top__item по весу
                .catalog-item
                    ul.catalog-item__list
                        include ../modules/catalog-item/catalog-item
                        include ../modules/catalog-item/catalog-item-1
                        include ../modules/catalog-item/catalog-item-2
                        include ../modules/catalog-item/catalog-item-3
                        include ../modules/catalog-item/catalog-item-4
                        include ../modules/catalog-item/catalog-item-5
                        include ../modules/catalog-item/catalog-item
                        include ../modules/catalog-item/catalog-item-1
                        include ../modules/catalog-item/catalog-item-2
                        include ../modules/catalog-item/catalog-item-3
                        include ../modules/catalog-item/catalog-item-4
                        include ../modules/catalog-item/catalog-item-5
                        include ../modules/catalog-item/catalog-item
                        include ../modules/catalog-item/catalog-item-1
                        include ../modules/catalog-item/catalog-item-2
                .catalog-product__pagination
                    include ../pages/pagination-catalog/pagination



